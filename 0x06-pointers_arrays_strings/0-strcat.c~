#include "holberton.h"
#include <stdio.h>

/**
 * _strcat - function that concatenates two string.
 *
 * @dest: destiny
 * @src: source
 *
 * Return: Always 0.
 */
char *_strcat(char *dest, char *src)
{
	int dest_len;
	int src_len;
	int i;

	for (dest_len = 0; dest[dest_len] != '\0'; dest_len++)
	{
	}

	for (src_len = 0; src[src_len] != '\0'; src_len++)

	for (i = dest_len; i <= src_len; i++)
	{
		dest[dest_len + i] = src[i];
	}
		dest[dest_len + i++] = '\0';

	return (dest);
}
