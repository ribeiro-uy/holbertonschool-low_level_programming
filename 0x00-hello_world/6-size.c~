#include <stdio>
/*
 *
 *Task 6
 *
 */
int main(void)
{
	char c;
	int i;
	long int ld;
	long long int lld;
	float f;
	printf("The size of a char: %lu\n", sizeof(c));
	printf("The size of an int:%lu\n", sizeof(i));
	printf("The size of a long int:%lu\n", sizeof(ld));
	printf("The size of a long long int:%lu\n", sizeof(lld));
	printf("Size of a float:%lu\n", sizeof(f));
	return (0);
}
