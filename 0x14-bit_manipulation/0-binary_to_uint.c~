#include "holberton.h"

/**
 * binary_to_unit - function that converts a binary number to an unsigned int.
 *
 * @b: binary to convert
 *
 * Return: Always 0.
 */

unsigned int binary_to_uint(const char *b)
{
	unsigned int i = 0;
	unsigned int res = 0;
	unsigned int bytes = 1;

	if (!b)
		return (0);

	while (b[i] != '\0')
	{
		printf("hola while\n");
/**		if (b[i] != 0 && b[i] != 1)
 *			return (0);
 */
		if (b[i] == 1)
		{
			res += b[i] * bytes;
			printf("estoy sumando");
			bytes = bytes * 2;
		}
		i++;
	}
	return (res);
}
